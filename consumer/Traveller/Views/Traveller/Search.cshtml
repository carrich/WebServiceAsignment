


@model IEnumerable<Traveller.Models.PostDetail>

@{
    ViewBag.Title = "Search";
}
@using (Html.BeginForm("Search", "Traveller", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()


    <h2>Search</h2>
    <br />

    <div class="form-group">
        <input type="text" name="searching" />
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Search" class="btn btn-default" />
        </div>
    </div>

}





@foreach (var item in Model)
{

    <div class="box">
        <div class="boxin1">
            <div class="line1 row">
                <div class="col-2">
                    <a href=""><img src="@Url.Content(item.ImagePath)" alt="" class="anhUser"></a>
                </div>
                <div class="col-10 UserInfomation">
                    <h5 class="UserName">@item.firstName @item.lastName</h5>
                    <div class=""><span class="DateCreate">@item.CreatedAt</span></div>
                </div>
            </div>
            <div class="Noidung">
                <div class="tieude">
                    <span>@item.Title</span>
                </div>
                <div class="noidungchinh">@item.Content</div>

            </div>
            <div>
                <img src="@Url.Content(item.ImageP)" alt="" class="Anh">

            </div>
            <div class="Thongke">
                  <div class="Binhluan">
                     
                          <div class="Binhluan1 btn ">
                              @Html.ActionLink("Details", "PostDetail", new { id = item.id })
                          </div>
                     
                </div>
            </div>

            
        </div>
    </div>



    
